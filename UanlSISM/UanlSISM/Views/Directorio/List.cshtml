@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Directorio - SISM</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                order: [[0, 'asc']],
                "language": {
                    "search": "Buscar ",
                    "zeroRecords": "No se encontró ningun registro",
                    "scrollX": "100%",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    },
                    "select": {
                        "rows": " filas seleccionadas"
                    },
                    "loadingRecords": "Un momento, cargando registros...",
                    "processing": "Procesando ...",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ ",
                }
            });
        });
    </script>

    <style>
        body {
            padding: 0 !important;
            margin: 0 !important;
            background-color: #f5f5f5 !important;
        }

        .navbar {
            background-color: rgba(0,74,143,1) !important;
            border-color: rgba(0,74,143,1) !important;
            border-radius: 0px;
        }

            .navbar span {
                color: white;
                font-size: 1vw;
                padding: 3px 10px;
            }

        .navbar-brand {
            height: auto;
            padding: 0px 0px;
            font-size: 0px;
            line-height: 0px;
        }

        .navbar-nav > li > a {
            color: white !important;
            padding-top: 1.8vw;
        }

        .navbar-brand {
            color: white !important;
        }

        .body-content {
            margin-bottom: 5vw;
        }

        .logo {
            width: 9vw;
            /*float: left;*/
            margin: 8px;
        }

        .logoSISM {
            width: 4vw;
            /*float: left;*/
            margin: 8px;
        }

        footer {
            position: fixed;
            bottom: 0;
            text-align: center;
            left: 0;
            width: 100%;
            z-index: 99;
            background-color: #f5f5f5;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        a {
            color: inherit !important;
            text-decoration: none !important;
        }

        .navbar-right {
            margin-right: 0px !important;
        }

        .card {
            border: 0px solid rgba(0,0,0,0);
            background-color: transparent;
        }

        .card-text {
            height: 120px;
        }

        .card-link {
            border: none;
        }

        .material-icons {
            line-height: inherit !important;
        }

        a:hover {
            background-color: transparent !important;
        }

        .content {
            background: url(http://smallenvelop.com/wp-content/uploads/2014/08/simple-pre-loader.jpg ) center no-repeat;
            background-size: 100%;
            width: 100%;
        }
    </style>

    <style type="text/css" media="screen and (max-width: 991px)">
        .logo {
            width: 15vw;
        }

        .logoSISM {
            width: 6vw;
        }

        .navbar-brand {
            margin: 0px !important;
        }

        .body-content {
            margin-bottom: 10vw;
        }

        .navbar span {
            font-size: 1.5vw;
        }

        #menu table {
            margin: auto;
        }
    </style>

    <style type="text/css" media="screen and (max-width: 767px)">
        .body-content {
            margin-bottom: 20vw;
        }

        .navbar span {
            font-size: 2.1vw;
            padding: 3px 3px;
        }

        #menu b {
            font-size: 10px;
        }

        #menu .material-icons {
            font-size: 10px;
        }

        #menu table {
            margin: auto;
        }

        .btn-group {
            width: 100%;
            margin-left: 0px !important;
        }

        .dropdown-toggle {
            border-radius: 0px !important;
        }

        .nav-tabs .nav-item {
            width: 100% !important;
        }

            .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link {
                margin-left: 0px !important;
                border-radius: 0px !important;
            }

        .dropdown-toggle {
            font-weight: bolder !important;
            font-size: 10px !important;
        }

        .dropdown-item {
            font-size: 3vw !important;
        }

        .logo {
            width: 20vw;
        }

        .logoSISM {
            width: 7vw;
        }

        .navbar span {
            font-size: 2.5vw !important;
            padding-top: 0vw !important;
        }

        .dropdown-toggle {
            font-size: 3vw !important;
        }
    </style>

    <style>

        th {
            color: white;
            font-size: large;
        }

        .dataTables_wrapper .dataTables_info {
            width: 100% !important;
        }

        .dataTables_wrapper .dataTables_paginate {
            width: 100% !important;
            text-align: center !important;
        }

        .dataTables_wrapper .dataTables_filter {
            width: 100% !important;
            text-align: center !important;
        }

            .dataTables_wrapper .dataTables_filter label {
                width: 100% !important;
                font-weight: bolder;
                text-align: center;
            }

            .dataTables_wrapper .dataTables_filter input {
                width: 50% !important;
                text-align: center;
                border: none;
                border-bottom: 1px solid lightgray;
                margin-bottom: 25px;
                margin-top: 30px;
                width: 100%;
                max-width: 100%;
                box-sizing: border-box;
                color: #2C3E50;
                font-size: 16px;
                letter-spacing: 1px;
            }

                .dataTables_wrapper .dataTables_filter input:focus {
                    -moz-box-shadow: none !important;
                    -webkit-box-shadow: none !important;
                    box-shadow: none !important;
                    border: none;
                    font-weight: bold;
                    border-bottom: 2px solid #FBC43D;
                    outline-width: 0
                }

        .dataTables_wrapper .dataTables_length {
            display: none;
        }
    </style>

    <!--link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css" /-->
    <link rel="stylesheet" href="~/Content/animate.min.css" />

    <!--link rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons'-->
    <link rel='stylesheet' href='~/Content/materialicons.css'>

</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <div class="row" style="width:100%;">
                <div class="col-6 p-0">
                    <a class="navbar-brand"><img src="~/Imagenes/logo-sm.png" class="logo" /></a>
                    <a class="navbar-brand"><img class="logoSISM" src="~/Imagenes/logo_SISM2.png" /> </a>
                </div>
                <div class="col-6 text-right m-auto">
                    <label style="width:100%;color:rgba(0,74,143,1) !important;">Servicios Medicos UANL-Directorio</label>
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content">

        <div class="col-md-12">
            <div class="row">


                <div class="col-12 text-center">
                    <br />
                    <br />
                    <h2 style="text-align:center"><b>Directorio Telefónico Servicios Médicos UANL</b></h2>
                    <hr />
                </div>


                <table id="table" class="table table-bordered table-striped table-responsive-lg">
                    <thead>
                        <tr style="background-color: #FBC43D !important">
                            <th>Nombre</th>
                            <th>Puesto</th>
                            <th>Departamento</th>
                            <th>Ubicación</th>
                            <th>Display</th>
                            <th>Ext</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                            {
                        <tr>
                            <td><i class="bi bi-person-fill"></i>@item.Nombre</td>
                            <td>@item.Puesto</td>
                            <td><i class="bi bi-geo"></i>  @item.Departamento</td>
                            <td><i class="bi bi-building"></i>@item.Ubicacion</td>
                            <td> @item.Display</td>
                            <td><i class="bi bi-telephone-fill"></i> @item.Extension &nbsp;&nbsp;&nbsp;</td>

                        </tr>
                            }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</body>
</html>