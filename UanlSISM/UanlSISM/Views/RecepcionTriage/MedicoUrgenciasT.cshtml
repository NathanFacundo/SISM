<script type="text/javascript">

    $(document).ready(function () {
        
        var refreshId = setInterval(function () {
            $('#example').load(Llena());
        }, 3000);

        $('#example').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "info": "Página _START_ de _END_ de: _TOTAL_  Derechohabientes",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            }
        });

    });

    function Llena() {
        $.ajax({
            url: encodeURI('../RecepcionTriage/ObtenerPacientes'),
            method: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else {
                    LlenaTabla(data.PACIENTES);
                }
            },
            error: function (ex) {
                alert("Error");
            }
        });
    }

    function LlenaTabla(Lista) {
        var table = $('#example').DataTable();
        table.destroy();
        //console.log(Lista);
        table = $('#example').DataTable({
            data: Lista,
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "zeroRecords": "No se encontró ningun derechohabiente",
                "info": "Página _START_ de _END_ de: _TOTAL_ Derechohabientes",
                "infoEmpty": "Mostrando 0 de 0 de: 0 Derechohabientes",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            columns: [
                { "data": "EstatusConsulta", className: "text-center", render: function (data) { return (data == '0' ? '<h8 style="color:white; background-color:blue">' + "PACIENTE EN ESPERA" + '</h8>' : '<h8 style="color:black; ">' + "PACIENTE RECLAMADO" + '</h8>'); } },
                { "data": "Fecha" },
                {
                    "className": 'text-center',
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<button title="Ver Detalle" id="VerDetalle" class="btn btn-primary btn-fab btn-fab-mini btn-round" data-title="Delete" data-toggle="modal" data-target="#delete"><i class="material-icons">message</i></button>',
                    "target": -2
                },
                { "data": "NombrePaciente" },
                {
                    "data": "ColorConsulta", className: "text-center", render: function (data) { return (data === 'Rojo' ? '<button class=" btn-lg" style="background-color:red; width:120px; height:45px " ></button >' : (data === 'Naranja' ? '<button class=" btn-lg"  style="background-color:orange; width:120px; height:45px " ></button >' : (data === 'Amarrillo' ? '<button class=" btn-lg" style="background-color:yellow; width:120px; height:45px"></button >' : (data === 'Verde' ? '<button class=" btn-lg" style="background-color:green; width:120px; height:45px" ></button >' : (data === 'Azul' ? '<button class=" btn-lg" style="background-color:blue; width:120px; height:45px" ></button >' : ''))))); }
                }
            ]
        });
    }

    $('#example tbody').on('click', '#VerDetalle', function () {
        var tr = $(this).closest('tr');
        var row = $('#example').DataTable().row(tr);
        let Exp = row.data().Expediente;
        var IdPaciente = row.data().Id;

        $.ajax({
            url: encodeURI('../RecepcionTriage/MostrarModal'),
            method: 'POST',
            dataType: 'json',
            data: { Paciente: IdPaciente },
            success: function (data) {
                var numexp = data[0].Expediente;
                $('.foto-paciente').css('background-image', 'url("http://148.234.143.204/smuanl_web/fotos_dhab/' + numexp + '.jpg")');
                $('#nombresModal').html(data[0].NombrePaciente);
                $('#sexoModal').html(data[0].SexoPaciente);
                $('#edadModal').html(data[0].EdadPaciente);
                $('#expedienteModal').html(data[0].Expediente);
                $('#fechavigenciaModal').html(data[0].VigenciaPaciente);
                $('#TXTdescripcion').html(data[0].Descripcion);
                $('#PAsistolica').val(data[0].SV_PAsistolica);
                $('#PAdiastolica').val(data[0].SV_PAdiastolica);
                $('#FC').val(data[0].SV_FC);
                $('#FR').val(data[0].SV_FR);
                $('#Temperatura').val(data[0].SV_Temperatura);
                $('#SO2').val(data[0].SV_SO2);
                $('#Glucosa').val(data[0].SV_Glucosa);
                $('#Glasgow').val(data[0].SV_Glasgow);
                $('#Peso').val(data[0].SV_Peso);
                $('#Talla').val(data[0].SV_Talla);
                $('#ConsultaE').val(data[0].ConsultaEspecial);
                $('#IdPacienteModal').val(data[0].Id);
                $('#ExpedienteModal').val(data[0].Expediente);

                var color = data[0].ColorConsulta

                if (color == "Rojo") {
                    $("#btnColorRecomendado").css("background", "red")
                    $('#colorBoton').val('#FF0000')
                } else {
                    if (color == "Naranja") {
                        $("#btnColorRecomendado").css("background", "orange")
                        $('#colorBoton').val('#FF5733')
                    }
                    else if (color == "Amarrillo") {
                        $("#btnColorRecomendado").css("background", "yellow")
                        $('#colorBoton').val('#FFFF00')
                    }
                    else if (color == "Verde") {
                        $("#btnColorRecomendado").css("background", "green")
                        $('#colorBoton').val('#008000')
                    }
                    else if (color == "Azul") {
                        $("#btnColorRecomendado").css("background", "blue")
                        $('#colorBoton').val('#0000FF')
                    }
                }
                $('#agendarModal').modal("show");
            },
            error: function (ex) {
                alert("Error");
            }
        });
    });

    $('#agendarModal').on('shown.bs.modal', function () {

        $("#btnConsultar").click(function () {
            var IdPaciente = $("#IdPacienteModal").val();
            var Exp = $("#ExpedienteModal").val();

            $.ajax({
                url: encodeURI('../RecepcionTriage/BotonConsultar'),
                method: 'POST',
                dataType: 'json',
                data: { IdPac: IdPaciente },
                success: function (data) {
                    if (data.MENSAJE.substring(0, 7) == "Found: ") {
                        Swal.fire({
                            icon: 'error',
                            title: data.MENSAJE.substring(7),
                            willClose: () => {
                                //Llena();
                                location.reload();
                            }
                        });
                    }
                    if (data.MENSAJE.substring(0, 7) == "Succe: ") {
                        Swal.fire({
                            icon: 'success',
                            title: data.MENSAJE.substring(7),
                            willClose: () => {
                                Llena();
                                $("#agendarModal").modal('hide');
                                window.location.href = '../ServiciosMedicos/HojaFrontal' + '/' + Exp
                            }
                        });
                    }
                    if (data.MENSAJE.substring(0, 7) == "Error: ") {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops... ¡Error!',
                            text: data.MENSAJE.substring(7),
                        });
                    }
                },
                error: function (ex) {
                    alert("Error");
                }
            });
        });

    })

</script>