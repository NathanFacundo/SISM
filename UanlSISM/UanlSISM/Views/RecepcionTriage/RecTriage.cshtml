        $(".triageinput").keyup(function () {

            $("#formTriageData").submit();
        });

        $("#formTriageData").submit(function (event) {
            let data = $(this).serialize();
            console.log(data);
            $.post("@Url.Action("CheckTriage", "RecepcionTriage")", data).done(function (response) {
                $("#btnColorRecomendado").css("background", response.HexColor);
                $('#colorBoton').val(response.HexColor)

                var colorBoton = $('#colorBoton').val()
                if (colorBoton == "#FF0000") {
                    document.getElementById("my_select").disabled = true;
                } else {
                    document.getElementById("my_select").disabled = false;
                }

            }).fail(function (response) {
                console.log(response);
            });

            event.preventDefault();

        });

        $("#btnsave").click(function () {
            var PAsistolica = $("#PAsistolica").val();
            var PAdiastolica = $("#PAdiastolica").val();
            var FC = $("#FC").val();
            var FR = $("#FR").val();
            var Temperatura = $("#Temperatura").val();
            var SO2 = $("#SO2").val();
            var Glucosa = $("#Glucosa").val();
            var Glasgow = $("#Glasgow").val();
            var Descripción = $("TXTdescripcion").val();

            if (PAsistolica != '' && PAdiastolica != '' && FC != '' && FR != '' && Temperatura != '' && SO2 != '' && Glucosa != '' && Glasgow != '' && Descripción != '') {
                let data = $("#formTriageData").serialize();
                $.post("@Url.Action("Save", "RecepcionTriage")", data).done(function (response) {

                    if (response.MENSAJE.substring(0, 6) == "Error:") {
                        Swal.fire({
                            icon: 'error',
                            title: '¡Error!',
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: response.MENSAJE.substring(7),
                            showConfirmButton: false,
                            timer: 2000,
                            onClose: () => {
                                location.reload();
                            }
                        })
                    }
                }).fail(function (response) {
                    Swal.fire({
                        icon: 'error',
                        title: '¡Error!',
                        text: ''
                    });
                });
                event.preventDefault();
            } else {
                Swal.fire({
                        icon: 'error',
                        title: '¡Error!',
                        text: 'Campos incompletos'
                });
            }
        });

        $("#my_select").change(function () {
            var color = $("#my_select").val()

            if (color == "2") {
                $("#btnColorRecomendado").css("background", "red")
                $('#colorBoton').val('#FF0000')
            } else {
                if (color == "3") {
                    $("#btnColorRecomendado").css("background", "orange")
                    $('#colorBoton').val('#FF5733')
                }
                else if (color == "4") {
                    $("#btnColorRecomendado").css("background", "yellow")
                    $('#colorBoton').val('#FFFF00')
                }
                else if (color == "5") {
                    $("#btnColorRecomendado").css("background", "green")
                    $('#colorBoton').val('#008000')
                }
                else if (color == "6") {
                    $("#btnColorRecomendado").css("background", "blue")
                    $('#colorBoton').val('#0000FF')
                }
            }
        });

    })

    $("#btncancel").click(function () {
            location.reload();

    });

