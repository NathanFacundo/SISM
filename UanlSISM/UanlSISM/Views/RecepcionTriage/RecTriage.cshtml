        var row = $('#tblPacientesRegistrados').DataTable().row(tr);
        var IdPaciente1 = row.data().Id;

        $.ajax({
            url: '@Url.Action("EliminarPaciente", "RecepcionTriage")',
            method: 'POST',
            dataType: 'json',
            data: { Paciente: IdPaciente1 },
            success: function (data) {
                if (data.MENSAJE.substring(0, 7) == "Succe: ") {
                    Swal.fire({
                        icon: 'success',
                        title: data.MENSAJE.substring(7),
                        willClose: () => {
                            location.reload();
                        }
                    });
                }
                if (data.MENSAJE.substring(0, 7) == "Error: ") {
                    Swal.fire({
                        icon: 'error',
                        title: data.MENSAJE.substring(7)
                    });
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    });

