                    }
                });
                $('#cb2').change(function () {
                    if (document.getElementById('cb2').checked) {
                        $("#btnColorRecomendado").css("background", "yellow");
                    } else {
                        //$("#btnColorRecomendado").css("background", "white");
                        $("#formTriageData").submit();
                    }
                });
                $('#cb3').change(function () {
                    if (document.getElementById('cb3').checked) {
                        $("#btnColorRecomendado").css("background", "yellow");
                    } else {
                        //$("#btnColorRecomendado").css("background", "white");
                        $("#formTriageData").submit();
                    }
