<script>
    $(document).ready(function () {

        var table2 = $('#example2').DataTable({
            destroy: true,
            searching: true,
            responsive: true,
            "ajax": {
                "url": "@Url.Action("ListInvent", "Almacen")",
                "dataSrc": "",
            },
            "language": {
                "search": "Buscar registro:",
                "zeroRecords": "No se encontró ningun registro",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior"
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
                "loadingRecords": "Un momento, cargando registros...",
                "processing": "Procesando registros...",
                "info": "Mostrando _START_ a _END_ de _TOTAL_ registros",
                "lengthMenu": "Mostrando _MENU_ registros",
            },
            dom: 'Bfrtip',
            buttons: [

                {
                    extend: 'excel',
                    exportOptions: {
                        columns: [0, 2, 3, 4, 6, 7, 8]
                        //columns: [0, 1, 2, 5, 6, 7]
                    }
                },
                {
                    extend: 'pdf',
                    exportOptions: {
                        columns: [0, 2, 3, 4, 6, 7, 8]
                        //columns: [0, 1, 2, 5, 6, 7]
                    }
                },
                {
                    extend: 'print',
                    text: 'Imprimir conteo',
                    exportOptions: {
                        columns: [0, 2, 3, 4, 6, 7, 8]
                        //columns: [0, 1, 2, 5, 6, 7]
                    },
                    customize: function (win) {
                        $(win.document.body)
                            .css('font-size', '12px');

                        $(win.document.body).find('table')
                            .css('font-size', '12px');
                    }
                },
                {
                    extend: 'print',
                    text: 'Imprimir registros subidos',
                    exportOptions: {
                        columns: [0, 2, 3, 4, 6, 7, 8]
                        //columns: [0, 1, 2, 3, 9]
                    }
                },
            ],
            "columns": [
                { "data": "clave" },
                { "data": "id_sustancia" },
                { "data": "descripcion_sal" },
                { "data": "presentacion" },
                { "data": "descripcion_grupo" },
                { "data": "manejodisponible" },
                { "data": "id_sustancia" },
                { "data": "id_sustancia" },
                { "data": "id_sustancia" },
                { "data": "boton" },
                { "data": "manejodisponible" },
            ],
            "order": [[2, 'asc']],
            "columnDefs": [
                /*{
                    targets: 0,
                    "visible": false,
                },*/
                {
                    targets: 1,
                    "visible": false,
                },
                {
                    targets: 2,
                    "width": "10%",
                },
                {
                    targets: 5,
                    "visible": true,
                    'render': function (data, type, full, meta) {
                        return '<input name="total" id="total" value="' + data + '" class="form-control conteo">';
                    }
                },
                {
                    targets: 6,
                    "visible": false,
                    'render': function (data, type, full, meta) {
                        return '___________';
                    }
                },
                {
                    targets: 7,
                    "visible": false,
                    'render': function (data, type, full, meta) {
                        return '___________';
                    }
                },
                {
                    targets: 8,
                    "visible": false,
                    'render': function (data, type, full, meta) {
                        return '___________';
                    }
                },
                {
                    targets: 9,
                    "visible": true,
                },
                {
                    targets: 10,
                    "visible": false,
                },
                /*{
                    targets: 8,
                    'render': function (data, type, full, meta) {
                        return '<button data-id="' + data + '" class="btn btn-subir">Subir</button>';
                    }
                },*/
            ],
        });


        table2.on('click', '.btn-subir', function () {
            //alert('dsfsdfs');
            var total = $(this).closest("tbody tr").find("#total").val();
            var id = $(this).attr('data-id');

            if (total) {
                $.ajax({
                    url: '@Url.Action("SubirInventario", "Almacen")',
                    dataType: "json",
                    data: { id: id, total: total },
                    success: function (data) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Cantidad de inventario actualizada con éxito',
                        });
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Algo salio mal, comunícate al área de sistemas',
                        });
                    }
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Cantidad de medicamento no válido',
                });
            }

        });


    });
</script>


