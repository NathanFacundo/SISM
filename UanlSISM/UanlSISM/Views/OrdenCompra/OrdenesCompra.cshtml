<script>

    $(document).ready(function () {

        $('#tbl_OCgeneradas').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": "No se encontraron O.C disponibles",
                "search": "Buscar:",
                "info": "_TOTAL_ Ordenes de Compra ",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            }
        });

        LlenaOC();
    });

    function LlenaOC() {
        $.ajax({
            url: '@Url.Action("ObtenerOCInicio", "OrdenCompra")',
            method: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else {
                    LlenaTablaOC(data.OCS);
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTablaOC(ListaOCS) {
        var table = $('#tbl_OCgeneradas').DataTable();
        table.destroy();

        table = $('#tbl_OCgeneradas').DataTable({
            responsive: true,
            searching: true,
            info: true,
            deferRender: true,
            scroller: false,
            scrollColapse: true,
            paging: false,
            lengthChange: false,
            language: {
                "zeroRecords": "No se encontraron O.C disponibles",
                "search": "Buscar:",
                "info": "_TOTAL_ Ordenes de Compra ",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: ListaOCS,
            "order": [[10, 'desc']],
            columns: [
                { 'data': 'Id_OC', className: "text-center" },
                { 'data': 'Clave', className: "text-center" },
                { 'data': 'Fecha', className: "text-center" },
                { 'data': 'Id_User', className: "text-center" },
                {
                    "data": "Validar", className: "text-center", render: function (data) {
                        if (data == '1') {
                            return '<h8 style="color:white; background-color:red; font-family:Arial; font-size:14px">' + "POR AUTORIZAR" + '</h8>';
                        }
                        if (data == '2') {
                            return '<h8 style="color:white; background-color:blue; font-family:Arial; font-size:14px">' + "AUTORIZADA" + '</h8>';
                        }
                        if (data == '3') {
                            return '<h8 style="color:white; background-color:green; font-family:Arial; font-size:14px">' + "HECHA/GENERADA" + '</h8>';
                        }
                        if (data == '4') {
                            return '<h8 style="color:white; background-color:red; font-family:Arial; font-size:14px">' + "CANCELADA" + '</h8>';
                        }
                    }
                },
                { 'data': 'Id_Requisicion', className: "text-center" },
                { 'data': 'Fecha1', className: "text-center" },
                {
                    "data": "EstatusContrato", className: "text-center", render: function (data) {
                        if (data == 'Sin Contrato') {
                            return '<h8 style="color:black; ">' + "NO" + '</h8>';
                        } else {
                            return '<h8 style="color:black; ">' + "SI" + '</h8>';
                        }
                    }
                },
                {
                    "className": 'text-center',
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<button title="Ver Detalle" id="VerDetalle" class="btn btn-primary fa fa-book" data-toggle="modal"></button>',
                    "target": -2
                },
                {
                    "className": 'text-center',
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<button title="Eliminar O.C" id="botonDelete" class="btn btn-danger btn-sm fa fa-times" data-toggle="modal"></button>',
                    "target": -2
                },
                { "data": "FechaRequisicion" }
            ],
            columnDefs: [
                { "visible": false, "targets": 10 },
            ]
        });
    }

    $('#tbl_OCgeneradas tbody').on('click', '#VerDetalle', function () {
        var tr = $(this).closest('tr');
        var row = $('#tbl_OCgeneradas').DataTable().row(tr);
        //var ClaveOC = row.data().Clave;
        var IdOC = row.data().Id_OC;
        var ClaveRequi = row.data().Id_Requisicion;

        if (row.data().Validar == "2") {
            document.getElementById("btnGenerar_OC").disabled = false;
        } else {
            document.getElementById("btnGenerar_OC").disabled = true;
        }

        $('#Id_OC').val(IdOC);

        $('#DetalleOCModal').modal("show");

        var array = { Id_OC: IdOC, FolioRequi: ClaveRequi  };
        var url = '@Url.Action("ObtenerDetalleOC_Generada", "OrdenCompra")';
        $.post(url, array).done(function (response) {
            //$('#NoOC').html(response[0].Folio);
            $('#FechaOC').html(response[0].Fecha);
            $('#Fecha').html(response[0].Fecha1);
            $('#PROV').html(response[0].NombreProveedor);
            $('#UsElaboro').html(response[0].Usuario);
            $('#Total_OC1').html(response[0].Total_OC);
            $('#Total_OC').html(response[0].Total_OC);
            $('#TXTdescripcion').html(response[0].DescripcionOC);
            $('#FRequi').html(response[0].FolioRequisicion);

            var FA = response[0].FechaAcuse;
            
            if (FA == null || FA == "") {
                $("#InputFA1").hide();

                $("#divAcuse").show();
            } else {
                $("#InputFA1").show();
                $('#InputFA').html(FA);

                $("#divAcuse").hide();
            }
            
            LlenDetalle(response);

        }).fail(function (response) {
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
            });
        });

        function LlenDetalle(Lista) {
            $('#tblDetalleOC').DataTable({
                destroy: true,
                searching: false,
                responsive: true,
                lengthChange: false,
                paging: false,
                data: Lista,
                language: {
                    "zeroRecords": " ",
                    "search": "",
                    "info": "",
                    "infoEmpty": "",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior",
                    },
                    "select": {
                        "rows": " %d filas seleccionadas"
                    },
                },
                columns: [
                    {
                        'data': 'ORDEN', className: "text-center",
                        render: function (data, type, row, meta) {
                            return (row.ORDEN = meta.row + meta.settings._iDisplayStart + 1);
                        }
                    },
                    { "data": "Clave", className: "text-center" },
                    { "data": "Descripcion", className: "text-center" },
                    { "data": "Cantidad", className: "text-center" },
                    { "data": "PrecioUnitario", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
                    { "data": "Total", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') }
                ]
            });
        }

        $('#DetalleOCModal').on('hidden.bs.modal', function () {
            location.reload();
        })
    });

    $('#tbl_OCgeneradas tbody').on('click', '#botonDelete', function () {
        var tr = $(this).closest('tr');
        var row = $('#tbl_OCgeneradas').DataTable().row(tr);
        var Id = row.data().Id_OC;

        $.ajax({
            url: '@Url.Action("EliminarOC", "OrdenCompra")',
            method: 'POST',
            dataType: 'json',
            data: { Id_OC: Id },
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Succe:") {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Éxito!',
                        text: data.MENSAJE.substring(7),
                        willClose: () => {
                            location.reload();
                        }
                    });
                }
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });

    });

    $('#btnGenerar_OC').on('click', function () {
        var Id_OC = $("#Id_OC").val();

        $.ajax({
            url: '@Url.Action("HACER_OC", "OrdenCompra")',
