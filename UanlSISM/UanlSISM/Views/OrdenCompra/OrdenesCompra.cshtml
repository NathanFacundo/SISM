<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<h5>O.C GENERADAS</h5>
<br />

<style>
    table.dataTable {
        width: 100% !important;
    }

    .uanl-logo {
        width: 10vw;
        margin-top: 0vw;
        margin-bottom: 1vw;
    }

    #Id {
        color: black;
    }

    .btn-space {
        margin-right: 5px;
    }

    #DetalleRequiModal .modal-dialog {
        height: 100vh;
        margin-top: 0px;
    }
</style>

<div class="col-md-12 text-center m-auto pl-3 pr-3 pt-1 pb-0 inputBarcode" id="msform">
    <img src="~/Imagenes/Servicios Medicos_Mesa de trabajo 1.png" class="uanl-logo" />
</div>

<div class="row">
    <div class="col-6">
        <button type="button" class="btn btn-outline-primary" onclick="Regresar()">REGRESAR</button>
    </div>

</div>

<div>
    <table class="table table-striped table-hover" id="tbl_OCgeneradas">
        <thead>
            <tr>
                <th>Folio Req.</th>
                <th>Fecha Req.</th>
                <th>Folio O.C</th>
                <th>Fecha O.C</th>
                <th>Usuario O.C</th>
                <th>Detalle</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>



<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>

    $(document).ready(function () {

        $('#tbl_OCgeneradas').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "search": "Buscar:",
                "info": "_TOTAL_  O.C",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            }
        });


        LlenaOC();
    });

    function LlenaOC() {
        $.ajax({
            url: '@Url.Action("ObtenerOCInicio", "OrdenCompra")',
            method: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else {
                    LlenaTablaOC(data.OCS);
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTablaOC(ListaOCS) {
        var table = $('#tbl_OCgeneradas').DataTable();
        table.destroy();

        table = $('#tbl_OCgeneradas').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                //"search": "Buscar:",
                "info": "_TOTAL_  Borradores",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: ListaOCS,
            order: [[1, 'desc']],
            columns: [
                { 'data': 'Id_Requisicion', className: "text-center" },
                { 'data': 'Fecha1', className: "text-center" },
                { 'data': 'Clave', className: "text-center" },
                { 'data': 'Fecha', className: "text-center" },
                { 'data': 'Id_User', className: "text-center" },
                {
                    "className": 'text-center',
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<button title="Ver Detalle" id="VerDetalle" class="btn btn-primary fa fa-book" data-toggle="modal"></button>',
                    "target": -2
                }
            ]
        });
    }

    function Regresar() {
        window.location = '@Url.Action("OrdenCompra")';
    }
</script>