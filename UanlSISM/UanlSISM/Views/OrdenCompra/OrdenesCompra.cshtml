    });

    $('#datepicker').datepicker({
        locale: 'es-es',
        showOtherMonths: true,
        format: 'dd/mm/yyyy'
    });

    $("#datepicker input").change(function () {
        var FechaAcuse = $(this).val()
        var Id_OC = $("#Id_OC").val();

        var d = new Date(); // for now
        var h = d.getHours();
        h = (h < 10) ? ("0" + h) : h;
        var m = d.getMinutes();
        m = (m < 10) ? ("0" + m) : m;
        var s = d.getSeconds();
        s = (s < 10) ? ("0" + s) : s;

        FechaAcuse = FechaAcuse + " " + h + ":" + m + ":" + s;
        //alert(FechaCompendio);

        Swal.fire({
            title: '¿Desea guardar la Fecha de Acuse?',
            text: FechaAcuse,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Si',
            cancelButtonText: 'No'
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    url: '@Url.Action("GuardarFecha_Acuse", "OrdenCompra")',
                    method: 'POST',
                    dataType: 'json',
                    data: { Id_OC: Id_OC, FechaAcuse: FechaAcuse },
                    success: function (data) {
                        if (data.MENSAJE.substring(0, 6) == "Succe:") {
                            Swal.fire({
                                icon: 'success',
                                title: '¡Éxito!',
                                text: data.MENSAJE.substring(7),
                                showConfirmButton: true,
                                willClose: () => {
                                    location.reload();
                                }
