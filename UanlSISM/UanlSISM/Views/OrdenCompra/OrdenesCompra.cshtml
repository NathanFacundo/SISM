    function LlenaOC() {
        $.ajax({
            url: '@Url.Action("ObtenerOCInicio", "OrdenCompra")',
            method: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else {
                    LlenaTablaOC(data.OCS);
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTablaOC(ListaOCS) {
        var table = $('#tbl_OCgeneradas').DataTable();
        table.destroy();

        table = $('#tbl_OCgeneradas').DataTable({
            responsive: true,
            searching: true,
            info: true,
            deferRender: true,
            scroller: false,
            scrollColapse: true,
            paging: false,
            lengthChange: false,
            language: {
                "zeroRecords": "No se encontraron O.C disponibles",
                "search": "Buscador",
                "info": "_TOTAL_ Ordenes de Compra ",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
