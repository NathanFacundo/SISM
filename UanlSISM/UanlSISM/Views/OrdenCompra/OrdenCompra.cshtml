<script>

    $(document).ready(function () {

        $('#Requis').DataTable({
            responsive: true,
            searching: false,
            info: true,
            lengthChange: false,
            pageLength: 20,
            language: {
                "zeroRecords": " ",
                "info": "_TOTAL_  ",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            }
        });

        ObtenerRequis();
    });

    function ObtenerRequis() {
        $.ajax({
            url: '@Url.Action("ObtenerRequisInicio", "Requisicion")',
            method: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else {
                    LlenaTablaRequis(data.REQUIS);
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTablaRequis(ListaRequis) {
        var table = $('#Requis').DataTable();
        table.destroy();

        table = $('#Requis').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "info": "_TOTAL_  Requisiciones",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: ListaRequis,
            order: [[1, 'desc']],
            columns: [
                { 'data': 'Clave', className: "text-center" },
                { 'data': 'Fecha', className: "text-center" },
                { 'data': 'EstatusContrato', className: "text-center" },
                {
                    "className": 'text-center',
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<button title="Ver Detalle" id="VerDetalle" class="btn btn-primary fa fa-book " data-toggle="modal" ></button>',
                    "target": -2
                }
            ]
        });
    }

    $('#Requis tbody').on('click', '#VerDetalle', function () {
        var tr = $(this).closest('tr');
        var row = $('#Requis').DataTable().row(tr);
        var Id = row.data().Clave;

        $('#DetalleRequiModal').modal("show");

        var array = { Id_Requi: Id };
        var url = '@Url.Action("ObtenerDetalleRequi", "Requisicion")';
        $.post(url, array).done(function (response) {
            $('#NoRequi').html(response[0].Folio);
            $('#FechaRequi').html(response[0].Fecha);
            $('#Fecha').html(response[0].Fecha1);
            $('#EstContrato').html(response[0].EstatusContrato);

            if (response[0].EstatusContrato == "Sin Contrato") {
                $('#EstContrato').hide();
            } else {
                $('#EstContrato').show();
            }

            $('#UsRequi').html(response[0].Usuario);
            LlenDetalle(response);

        }).fail(function (response) {
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
            });
        });

        function LlenDetalle(Lista) {
            var table12 = $('#tblDetalleRequi').DataTable({
                destroy: true,
                searching: false,
                responsive: true,
                lengthChange: false,
                paging: false,
                data: Lista,
                language: {
                    "zeroRecords": " ",
                    "search": "",
                    "info": "",
                    "infoEmpty": "",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior",
                    },
                    "select": {
                        "rows": " %d filas seleccionadas"
                    },
                },
                columns: [
                    {
                        'data': 'ORDEN', className: "text-center",
                        render: function (data, type, row, meta) {
                            return (row.ORDEN = meta.row + meta.settings._iDisplayStart + 1);
                        }
                    },
                    { "data": "Compendio", className: "text-center" },
                    { "data": "Clave", className: "text-center" },
                    { "data": "Descripcion", className: "text-center" },
                    { "data": "Cantidad", className: "text-center" },
                ]
            });
        }
    });

</script>
