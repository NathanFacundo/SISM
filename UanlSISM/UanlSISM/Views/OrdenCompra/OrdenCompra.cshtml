                },
            }
        });

        ObtenerRequis();
    });

    function ObtenerRequis() {
        $.ajax({
            url: '@Url.Action("ObtenerRequisInicio", "OrdenCompra")',
            method: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else {
                    LlenaTablaRequis(data.REQUIS);
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTablaRequis(DetRequi) {
        var table = $('#Requis').DataTable();
        table.destroy();

        table = $('#Requis').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "info": "_TOTAL_  Requisiciones",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: DetRequi,
            "order": [[5, 'desc']],
            columns: [
                { 'data': 'Clave', className: "text-center" },
                { 'data': 'Fecha', className: "text-center" },
                //{ 'data': 'EstatusContrato', className: "text-center" },
                { "data": "EstatusContrato", className: "text-center", render: function (data) { return (data === 'UANL-DGA-DA-022/08/2022' ? '<h8 style="color:black; ">' + "SI" + '</h8>' : '<h8 style="color:black; ">' + "NO" + '</h8>'); } },
                { 'data': 'Id_User', className: "text-center" },
                {
                    "className": 'text-center',
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<button title="Ver Detalle" id="VerDetalle" class="btn btn-primary fa fa-book " data-toggle="modal" ></button>',
                    "target": -2
                },
                { "data": "FechaRequisicion" }
            ],
            columnDefs: [
                { "visible": false, "targets": 5 },
            ]
        });
    }

    var Folio = "";
    var Proveedor = "";
    var EsConContrato = "";
    $('#Requis tbody').on('click', '#VerDetalle', function () {
        var tr = $(this).closest('tr');
        var row = $('#Requis').DataTable().row(tr);
        var Id = row.data().Clave;
        var Requi_ConContrato = row.data().EstatusContrato;

            $('#DetalleRequiModal').modal("show");

            var array = { Id_Requi: Id };
            var url = '@Url.Action("ObtenerDetalleRequi", "OrdenCompra")';
            $.post(url, array).done(function (response) {
                $('#NoRequi').html(response[0].Folio);
                $('#FechaRequi').html(response[0].Fecha);
                //$('#FechaOC').html(response[0].Fecha1);
                $('#EstContrato').html(response[0].EstatusContrato);

                if (response[0].EstatusContrato == "Sin Contrato") {
                    $('#EstContrato').hide();
                    $('#Contrato').hide();
                } else {
                    $('#EstContrato').show();
                    $('#IDD').hide();
                    //$('#IDD').prop('disabled', true);
                    document.getElementById('PROV').textContent = 'MEDICAZEN S.A. DE C.V.';
                    $('#Contrato').show();
                }

                $('#UsRequi').html(response[0].Usuario);
                //LlenDetalle(response);
                Folio = $('#NoRequi').val(response[0].Folio);
                EsConContrato = $("#EstContrato").val(response[0].EstatusContrato);
                
                //Proveedor = document.getElementById('PROV').textContent;

                $.grep(response, function (item) {
                    var Insertar = true;
                    $.grep(DetRequi, function (itemEnLista) {
                        if (item.Clave == itemEnLista.Clave) {
                            //Insertar = false;
                        };
                    });
                    if (Insertar) {
                        item.CANTIDAD_NUEVA = 0;
                        item.PREUNIT_NUEVA = 0;
                        DetRequi.push(item);
                    }
                    LlenDetalle(DetRequi);
                });

            }).fail(function (response) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            });

            $("#IDD").change(function () {
                var combo = document.getElementById("IDD");
                var selected = combo.options[combo.selectedIndex].text;
                document.getElementById('PROV').textContent = selected;
            });

            function LlenDetalle(DetRequi) {
                $('#tblDetalleRequi').DataTable({
                    destroy: true,
                    searching: false,
                    responsive: true,
                    lengthChange: false,
                    paging: false,
                    data: DetRequi,
                    language: {
                        "zeroRecords": " ",
                        "search": "",
                        "info": "",
                        "infoEmpty": "",
                        "paginate": {
                            "first": "Primero",
                            "last": "Último",
                            "next": "Siguiente",
                            "previous": "Anterior",
                        },
                        "select": {
                            "rows": " %d filas seleccionadas"
                        },
                    },
                    columns: [
                        {
                            'data': 'ORDEN', className: "text-center",
                            render: function (data, type, row, meta) {
                                return (row.ORDEN = meta.row + meta.settings._iDisplayStart + 1);
                            }
                        },
                        { "data": "Clave", className: "text-center" },
                        { "data": "Descripcion", className: "text-center" },
                        //{ "data": "Compendio", className: "text-center" },
                        //{ "data": "Compendio", className: "text-center", render: function (data) { return (data == null ? '<h8 style="color:black; ">' + "SIN COMPENDIO" + '</h8>' : '<a>' + data + '</a>'); } },
                        { "data": "Cantidad", className: "text-center" },
                        { "data": "PrecioUnitario", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
                        { "data": "Total", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
                        { 'data': 'CANTIDAD_NUEVA', className: "text-center", render: function (data) { return "<input id='InputCantidad' style='width:70px; border:0; border-bottom:1px solid;  background: transparent;' type='number' min='1' max='' value='" + data + "'></input>" } },
                        //{ 'data': 'PREUNIT_NUEVA', className: "text-center", render: function (data) { return "<input id='InputPU' style='width:70px; border:0; border-bottom:1px solid;  background: transparent;' type='number' min='1' max='' value='" + data + "'></input>" } },
                        { 'data': 'PREUNIT_NUEVA', className: "text-center", render: function (data) { return (row.data().EstatusContrato != 'Sin Contrato' ? "" : "<input id='InputPU' style='width: 70px; border: 0; border-bottom: 1px solid; background: transparent; ' type='number' min='1' max='' value='" + data + "'></input>"); } },
                        {
                            "className": 'text-center',
                            "orderable": false,
                            "data": null,
                            "defaultContent": '<button title="Eliminar" id="botonDelete" class="btn btn-danger btn-sm fa fa-times" data-toggle="modal"></button>',
                            "target": -2
                        }
                    ]
                });
            }

        $('#tblDetalleRequi tbody').on('change', '#InputCantidad', function () {
            var tr = $(this).closest('tr');
            var row = $('#tblDetalleRequi').DataTable().row(tr);
            row.data().CANTIDAD_NUEVA = $(this).val();
        }).change();
        $('#tblDetalleRequi tbody').on('change', '#InputPU', function () {
            var tr = $(this).closest('tr');
            var row = $('#tblDetalleRequi').DataTable().row(tr);
            row.data().PREUNIT_NUEVA = $(this).val();
        }).change();

        $('#DetalleRequiModal').on('hidden.bs.modal', function () {
            location.reload();
        })

        $('#tblDetalleRequi tbody').on('click', '#botonDelete', function () {
            var tr = $(this).closest('tr');
            var row = $('#tblDetalleRequi').DataTable().row(tr);

            DetRequi.splice(DetRequi.indexOf(row.data()), 1);

            LlenDetalle(DetRequi);

            Swal.fire({
                position: 'top-end',
                icon: 'error',
                title: 'SE ELIMINÓ EL MEDICAMENTO',
                showConfirmButton: false,
                timer: 1500
            })

        });
    });

    

    $('#btnGenerarOC').on('click', function () {
        Folio = $("#NoRequi").val();
        Proveedor = document.getElementById('PROV').textContent.trim();
        EsConContrato = $("#EstContrato").val();
        //if (EsConContrato === "Sin Contrato") {
        //    alert("sin contrato");
        //} else {
        //    alert(EsConContrato);
        //}
        if (DetRequi.length > 0) {
            TablaValida = true;

            $.grep(DetRequi, function (itemEnLista) {
                if (EsConContrato === "Sin Contrato") {
                    if (itemEnLista.PREUNIT_NUEVA <= 0 || itemEnLista.PREUNIT_NUEVA == "" || itemEnLista.PREUNIT_NUEVA == "0" || Proveedor == "") {
                        TablaValida = false;
                    }
                } else {
                    TablaValida = true;
                }
            });

            if (TablaValida) {

                $.ajax({
                    url: '@Url.Action("GenerarOC", "OrdenCompra")',
                    method: 'POST',
                    dataType: 'json',
                    data: { ListaOC: DetRequi, FolioRequi: Folio, ProveedorReq: Proveedor },
                    success: function (data) {
                        if (data.MENSAJE.substring(0, 6) == "Error:") {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops... ¡Error!',
                                text: data.MENSAJE.substring(7)
                            });
                        }
                        else {
                            Swal.fire({
                                icon: 'success',
                                title: '¡Éxito!',
                                text: data.MENSAJE.substring(7),
                                willClose: () => {
                                    location.reload();
                                }
                            })
                        }
                    },
                    error: function (ex) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Orden de Compra no generada',
                        });
                        //location.reload();
                    }
                });
            } else
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                    text: 'No puede haber cantidades en cero y/o falta asignar proveedor'
                });
        } else {
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
                text: 'No hay datos para la Orden de Compra'
            });
        }
    });

    $('#Cancelar').on('click', function () {
        location.reload();
    });

    function OCS() {
        window.location.href = '../OrdenCompra/OrdenesCompra'
    }


</script>

