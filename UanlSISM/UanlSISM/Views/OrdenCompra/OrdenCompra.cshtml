    function ObtenerRequis() {
        $.ajax({
            url: '@Url.Action("ObtenerRequisInicio", "OrdenCompra")',
            method: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else {
                    LlenaTablaRequis(data.REQUIS);
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTablaRequis(DetRequi) {
        var table = $('#Requis').DataTable();
        table.destroy();

        table = $('#Requis').DataTable({
            responsive: true,
            searching: true,
            info: true,
            deferRender: true,
            scroller: false,
            scrollColapse: true,
            paging:false,
            lengthChange: false,
            language: {
                "zeroRecords": "No se encontraron Requisiciones disponibles",
                "info": "_TOTAL_  Requisiciones",
                "search": "Buscador",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: DetRequi,
            "order": [[6, 'desc']],
            columns: [
                { 'data': 'Clave', className: "text-center" },
                { 'data': 'Fecha', className: "text-center" },
                { 'data': 'Id_User', className: "text-center" },
                {
                    "data": "EstatusContrato", className: "text-center", render: function (data) {
                        if (data == 'Sin Contrato') {
                            return '<h8 style="color:black; ">' + "NO" + '</h8>';
                        } else {
                            return '<h8 style="color:black; ">' + "SI" + '</h8>';
                        }
                    }
                },
                {
                    "data": "Estatus_OC", className: "text-center", render: function (data) {
                        if (data == null) {
                            return '<h8 style="color:white; background-color:red; font-family:Arial; font-size:14px">' + "PENDIENTE" + '</h8>';
                        }
                        if (data == "Parcial") {
                            return '<h8 style="color:black; background-color:yellow; font-family:Arial; font-size:14px">' + "PARCIAL" + '</h8>';
                        }
                        if (data == "Completa") {
                            return '<h8 style="color:white; background-color:green; font-family:Arial; font-size:14px">' + "COMPLETA" + '</h8>';
                        }
                    }
                },
                {
                    "className": 'text-center',
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<button title="Ver Detalle" id="VerDetalle" class="btn btn-primary fa fa-book " data-toggle="modal" ></button>',
                    "target": -2
                },
                { "data": "FechaRequisicion" }
            ],
            columnDefs: [
                { "visible": false, "targets": 6 },
            ]
        });
    }

    var Folio = "";
    var Proveedor = "";
    var EsConContrato = "";
    var row = "";
    var Id = "";
    var Estatus_OC_P = "";
    
    $('#Requis tbody').on('click', '#VerDetalle', function () {
        var tr = $(this).closest('tr');
        row = $('#Requis').DataTable().row(tr);
        Id = row.data().Clave;
        var Requi_ConContrato = row.data().EstatusContrato;

        VerDetalleRequi_Modal(row, Id);
    });


    function VerDetalleRequi_Modal(row, Id) {
        var Id = Id;
        var row = row;

        $('#DetalleRequiModal').modal("show");

            var array = { Id_Requi: Id };
            var url = '@Url.Action("ObtenerDetalleRequi", "OrdenCompra")';
            $.post(url, array).done(function (response) {
                $('#NoRequi').html(response[0].Folio);
                $('#FechaRequi').html(response[0].Fecha);
                $('#EstContrato').html(response[0].EstatusContrato);
                $('#Estatus_OC_Parcial').html(response[0].Estatus_OC_Parcial);

                //if (response[0].EstatusContrato == "Sin Contrato") {
                //    $('#EstContrato').hide();
                //    $('#Contrato').hide();
                //} else {
                //    $('#EstContrato').show();
                //    $('#IDD').hide();
                //    document.getElementById('PROV').textContent = 'MEDICAZEN S.A. DE C.V.';
                //    $('#Contrato').show();
                //}

                if (response[0].EstatusContrato == "Sin Contrato") {
                    $('#EstContrato').hide();
                    $('#Contrato').hide();
                } else {
                    $('#EstContrato').show();
                    $('#Contrato').show();
                }

                $('#UsRequi').html(response[0].Usuario);
                Folio = $('#NoRequi').val(response[0].Folio);
                EsConContrato = $("#EstContrato").val(response[0].EstatusContrato);
                Estatus_OC_P = $("#Estatus_OC_Parcial").val(response[0].Estatus_OC_Parcial);

                $.grep(response, function (item) {
                    var Insertar = true;
                    $.grep(DetRequi, function (itemEnLista) {
                        if (item.Clave == itemEnLista.Clave) {
                        };
                    });
                    if (Insertar) {
                        item.CANTIDAD_NUEVA = 0;
                        item.PREUNIT_NUEVA = 0;
                        item.TOTAL_NUEVA = 0;
                        DetRequi.push(item);
                    }
                    //LlenDetalle(DetRequi);
                });

                LlenDetalle(response);

            }).fail(function (response) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            });

            $("#IDD").change(function () {
                var combo = document.getElementById("IDD");
                var selected = combo.options[combo.selectedIndex].text;
                document.getElementById('PROV').textContent = selected;
            });

        function LlenDetalle(DetRequi) {
            var tableP = $('#tblDetalleRequi').DataTable();

            tableP.destroy();
            tableP = $('#tblDetalleRequi').DataTable({
                destroy: true,
                searching: false,
                responsive: true,
                lengthChange: false,
                paging: false,
                data: DetRequi,
                language: {
                    "zeroRecords": " ",
                    "zeroRecords": "No se encontró registro",
                    "search": "",
                    "info": "",
                    "infoEmpty": "",
                    decimal: ',',
                    thousands: '.',
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior",
                    },
                    "select": {
                        "rows": " %d filas seleccionadas"
                    },
                },
                columns: [
                    {
                        'data': 'ORDEN', className: "text-center",
                        render: function (data, type, row, meta) {
                            return (row.ORDEN = meta.row + meta.settings._iDisplayStart + 1);
                        }
                    },
                    { "data": "Clave", className: "text-center" },
                    { "data": "Descripcion", className: "text-center" },
                    { "data": "DescripcionGrupo", className: "text-center" },
                    {
                        "data": "Cantidad", className: "text-center", render: function (data, type, row) {
                            if (row.PartidaPendiente == 1 || row.PartidaPendiente == true) {
                                return '<h8 style="color:white; background-color:green; font-family:Arial; font-size:14px">' + "PARTIDA LISTA" + '</h8>';
                            } else {
                                return '<h8 style="color:black; ">' + data + '</h8>';
                            }
                        }
                    },
                    {
                        "data": "CantidadPendiente_OC", className: "text-center", render: function (data, type, row) {
                            if (row.PartidaPendiente == 1 || row.PartidaPendiente == true) {
                                return '';
                            } else {
                                if (data == null || data == 0) {
                                    return '<h8 style="color:black; ">' + row.Cantidad + '</h8>';
                                } else {
                                    return '<h8 style="color:black; ">' + data + '</h8>';
                                }
                            }
                        }
                    },
                    {
                        "data": "PrecioUnitario", className: "text-center", render: function (data, type, row) {
                            if (row.EstatusContrato == 'Sin Contrato') {
                                return '<a>N.A</a>';
                            } else {
                                return '<h8 style="color:black; ">' + data + '</h8>';
                            }
                        }
                    },
                    {
                        "data": "Total", className: "text-center", render: function (data, type, row) {
                            if (row.EstatusContrato == 'Sin Contrato') {
                                return '<a>N.A</a>';
                            } else {
                                return '<h8 style="color:black; ">' + data + '</h8>';
                            }
                        }
                    },
                    {
                        "data": "CANTIDAD_NUEVA", className: "text-center", render: function (data, type, row) {
                            if (row.PartidaPendiente == 1 || row.PartidaPendiente == true) {
                                return '';
                            } else {
                                return "<input class='input' id='InputCantidad' type='number' style='width:70px; border:0; border-bottom:1px solid; background:transparent;' type='number' min='0' max='' value='" + data + "'></input>";
                            }
                        }
                    },
                    {
                        "data": "PREUNIT_NUEVA", className: "text-center", render: function (data, type, row) {
                            if (row.PartidaPendiente == 1 || row.PartidaPendiente == true) {
                                return '';
                            } else {
                                return '$'+"<input class='InputPU' id='InputPU' style='width: 70px; border: 0; border-bottom: 1px solid; background: transparent; ' type='number' min='1' max='' value='" + data + "'></input>";
                            }
                        }
                    },
                    {
                        "data": "TOTAL_NUEVA", render: function (data, type, row) {
                            if (row.PartidaPendiente == 1 || row.PartidaPendiente == true) {
                                return '';
                            } else {
                                return '$'+'<input style="width: 70px; border: 0; border - bottom: 1px solid; background: transparent; " id="ORDEN' + row.ORDEN + '" type="text" value="' + data + '" readonly/>';
                            }
                        }
                    },
                    { 'data': 'CB_ELIMINAR', className: "text-center", render: function (data) { return "<input class='input3' id='input3' type='checkbox' ></input>" } }
                ],
                columnDefs: [
                    { "visible": false, "targets": 11 },
                ]
            });

            EsConContrato = $("#EstContrato").val();
            Estatus_OC_P = $("#Estatus_OC_Parcial").val();
            var dt = $('#tblDetalleRequi').DataTable();
            dt.column([6]).visible(false);
            dt.column([7]).visible(false);
        }

        //BTN Delete
        $('#tblDetalleRequi tbody').on('click', '#botonDelete', function () {
            var tr = $(this).closest('tr');
            var row = $('#tblDetalleRequi').DataTable().row(tr);

            DetRequi.splice(DetRequi.indexOf(row.data()), 1);
            LlenDetalle(DetRequi);

            Swal.fire({
                position: 'top-end',
                icon: 'error',
                title: 'SE ELIMINÓ EL MEDICAMENTO',
                showConfirmButton: false,
                timer: 1500
            })
        });

        //Cantidades y P.U
        $('#DetalleRequiModal').on('shown.bs.modal', function () {
            var EC = "";
            var TotalNuevo = 0;
            var TextoTotal = "Gran Total $";

            //CANTIDAD
            $(".input").keyup(function () {
                var tr = $(this).closest('tr');
                var row = $('#tblDetalleRequi').DataTable().row(tr);
                var valor = $(this).val();
                EC = row.data().EstatusContrato;

                //Validar si la CANTIDAD_NUEVA es mayor a la Cantidad Solicitada
                if (valor > row.data().Cantidad) {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'error',
                        title: 'La Cantidad Autorizada no puede ser mayor a la Cantidad Solicitada',
                        showConfirmButton: false,
                        timer: 1600
                    })
                    row.data().CANTIDAD_NUEVA = "";
                }
                else
                if (row.data().CantidadPendiente_OC == null || row.data().CantidadPendiente_OC == "0") //Si no hay CantidadPendiente, o sea, la partida es nueva
                {
                    row.data().CANTIDAD_NUEVA = valor;

                    //Cantidad Nueva * Precio U Nuevo
                    if (row.data().PREUNIT_NUEVA > 0) {
                        TotalNuevo = row.data().CANTIDAD_NUEVA * row.data().PREUNIT_NUEVA;
                        row.data().TOTAL_NUEVA = TotalNuevo.toFixed(2);
                        $('#ORDEN' + row.data().ORDEN).val(TotalNuevo.toFixed(2));
                        var sum = $('#tblDetalleRequi').DataTable().column(10).data().sum();
                        //document.getElementById("Total_OC2").innerHTML = TextoTotal + sum.toFixed(2);
                        const formato = new Intl.NumberFormat('es-MX', { maximumFractionDigits: 2 });
                        document.getElementById("Total_OC2").innerHTML = TextoTotal + formato.format(sum);
                    }
                    
                } else
                {
                    if (valor > row.data().CantidadPendiente_OC)
                    {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'error',
                            title: 'La Cantidad Autorizada no puede ser mayor a la Cantidad Solicitada',
                            showConfirmButton: false,
                            timer: 1600
                        })
                        row.data().CANTIDAD_NUEVA = "";
                    } else
                    {
                        row.data().CANTIDAD_NUEVA = valor;
                        
                        if (row.data().PREUNIT_NUEVA > 0) {
                            TotalNuevo = row.data().CANTIDAD_NUEVA * row.data().PREUNIT_NUEVA;
                            row.data().TOTAL_NUEVA = TotalNuevo.toFixed(2);
                            $('#ORDEN' + row.data().ORDEN).val(TotalNuevo.toFixed(2));
                            var sum = $('#tblDetalleRequi').DataTable().column(10).data().sum();
                            //document.getElementById("Total_OC2").innerHTML = TextoTotal + sum.toFixed(2);
                            const formato = new Intl.NumberFormat('es-MX', { maximumFractionDigits: 2 });
                            document.getElementById("Total_OC2").innerHTML = TextoTotal + formato.format(sum);
                        }
                         
                    }
                }
            });

            //PRECIO UNITARIO
            $(".InputPU").keyup(function () {
                var tr = $(this).closest('tr');
                var row = $('#tblDetalleRequi').DataTable().row(tr);
                row.data().PREUNIT_NUEVA = $(this).val();

                if (row.data().CANTIDAD_NUEVA > "0") {
                    TotalNuevo = row.data().CANTIDAD_NUEVA * row.data().PREUNIT_NUEVA;
                    row.data().TOTAL_NUEVA = TotalNuevo.toFixed(2);
                    $('#ORDEN' + row.data().ORDEN).val(TotalNuevo.toFixed(2));

