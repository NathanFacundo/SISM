<script>

    var DetalleOC = [];

    $(document).ready(function () {

        $('#OC_Generada').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": "No se encontraron O.C disponibles",
                "search": "Buscar:",
                "info": "_TOTAL_  Ordenes de Compra",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            }
        });

        LlenaOC();
    });

    function LlenaOC() {
        $.ajax({
            url: '@Url.Action("ObtenerOC_PorValidar", "OrdenCompra")',
            method: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else {
                    LlenaTablaOC(data.OCS);
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTablaOC(ListaOCS) {
        var table = $('#OC_Generada').DataTable();
        table.destroy();

        table = $('#OC_Generada').DataTable({
            responsive: true,
            searching: true,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            paging: false,
            lengthChange: false,
            language: {
                "zeroRecords": "No se encontraron O.C disponibles",
                "search": "Buscador",
                "info": "_TOTAL_  Ordenes de Compra",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: ListaOCS,
            "order": [[0, 'desc']],
            columns: [
                { 'data': 'Id_OC', className: "text-center" },
                { 'data': 'Clave', className: "text-center" },
                { 'data': 'Fecha_OC', className: "text-center" },
                { 'data': 'Fecha', className: "text-center" },
                { 'data': 'Id_Requisicion', className: "text-center" },
                { 'data': 'Fecha1', className: "text-center" },
                { 'data': 'Id_User', className: "text-center" },
                {
                    "data": "EstatusContrato", className: "text-center", render: function (data) {
                        if (data == 'Sin Contrato') {
                            return '<h8 style="color:black; ">' + "NO" + '</h8>';
                        } else {
                            return '<h8 style="color:black; ">' + "SI" + '</h8>';
                        }
                    }
                },
                {
                    "data": "Validar", className: "text-center", render: function (data) {
                        if (data == '1') {
                            return '<h8 style="color:white; background-color:red; font-family:Arial; font-size:14px">' + "POR AUTORIZAR" + '</h8>';
                        }
                        if (data == '2') {
                            return '<h8 style="color:white; background-color:blue; font-family:Arial; font-size:14px">' + "AUTORIZADA" + '</h8>';
                        }
                        if (data == '3') {
                            return '<h8 style="color:white; background-color:green; font-family:Arial; font-size:14px">' + "HECHA/GENERADA" + '</h8>';
                        }
                        if (data == '4') {
                            return '<h8 style="color:white; background-color:red; font-family:Arial; font-size:14px">' + "CANCELADA" + '</h8>';
                        }
                    }
                },
                {
                    "className": 'text-center',
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<button title="Ver Detalle" id="VerDetalle" class="btn btn-primary fa fa-book" data-toggle="modal"></button>',
                    "target": -2
                },
                { "data": "FechaRequisicion" }
            ],
            columnDefs: [
                { "visible": false, "targets": 10 },
            ]
        });
    }

    $('#OC_Generada tbody').on('click', '#VerDetalle', function () {
        var tr = $(this).closest('tr');
        var row = $('#OC_Generada').DataTable().row(tr);
        var IdOC = row.data().Id_OC;
        var ClaveRequi = row.data().Id_Requisicion;

        if (row.data().Validar == "1") {
            document.getElementById("btnValidar_OC").disabled = false;
        } else {
            document.getElementById("btnValidar_OC").disabled = true;
        }

        $('#Id_OC').val(IdOC);

        $('#DetalleOCModal').modal("show");

        var array = { Id_OC: IdOC, FolioRequi: ClaveRequi  };
        var url = '@Url.Action("ObtenerDetalleOC_GeneradaPV", "OrdenCompra")';
        $.post(url, array).done(function (response) {

            var FolioOC = response[0].Folio;
            if (FolioOC == null || FolioOC == '') {
                document.getElementById("ClaveOC1").innerHTML = "Identificador";
                $('#ClaveOC').html(response[0].Id_OC);
                document.getElementById("TitutloModal").innerHTML = "Pre-Orden de Compra";
            } else {
                $("#ClaveOC1").show();
                $('#ClaveOC').html(response[0].Folio);
                document.getElementById("TitutloModal").innerHTML = "Orden de Compra";
            }

            $('#FechaOC').html(response[0].Fecha);
            $('#Fecha').html(response[0].Fecha1);
            $('#PROV').html(response[0].NombreProveedor);
            $('#UsElaboro').html(response[0].Usuario);
            $('#Total_OC1').html(response[0].Total_OC);
            $('#TXTdescripcion').html(response[0].DescripcionOC);

            //Texto que se muestra debajo de la tabla del Detalle de la OC (con decimales)
            var GranTotalModal = response[0].Total_OC;
            const formato = new Intl.NumberFormat('es-MX', { maximumFractionDigits: 2 });
            document.getElementById("Total_OC").innerHTML = "Subtotal $" + formato.format(GranTotalModal);//GranTotal (normal-sin iva)

            //*IVA
            if (response[0].Total_OC_iva > 0) {
                //Este está en el header de la tabla (para exportar)
                $('#Total_OC1_iva').html(response[0].Total_OC_iva);

                //Este está debajo de la tabla al abrir el modal (detalle)
                var GTModaliva = response[0].Total_OC_iva;
                const formato = new Intl.NumberFormat('es-MX', { maximumFractionDigits: 2 });
                document.getElementById("Total_OC_iva").innerHTML = "Total $" + formato.format(GTModaliva);//GranTotal (con iva)
            }

            $('#FRequi').html(response[0].FolioRequisicion);

            var FA = response[0].FechaAcuse;

            if (FA == null || FA == "") {
                $("#InputFA1").hide();

                $("#divAcuse").show();
            } else {
                $("#InputFA1").show();
                $('#InputFA').html(FA);

                $("#divAcuse").hide();
            }

            $.grep(response, function (item) {
                var Insertar = true;
                $.grep(DetalleOC, function (itemEnLista) {
                    if (item.Clave == itemEnLista.Clave) {
                    };
                });
                if (Insertar) {
                    item.PREUNIT_NUEVA = 0;
                    item.CANTIDAD_NUEVA = 0;
                    DetalleOC.push(item);
                }
            });

            LlenDetalle(DetalleOC);

        }).fail(function (response) {
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
            });
        });

        function LlenDetalle(Lista) {
            var t = $('#tblDetalleOC').DataTable({
                destroy: true,
                searching: false,
                responsive: true,
                lengthChange: false,
                paging: false,
                data: Lista,
                "order": [[1, 'asc']],
                language: {
                    "zeroRecords": " ",
                    "search": "",
                    "info": "Total _TOTAL_ ",
                    "infoEmpty": "",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior",
                    },
                    "select": {
                        "rows": " %d filas seleccionadas"
                    },
                },
                columns: [
                    { "data": "Clave", className: "text-center" },
                    { "data": "Clave", className: "text-center" },
                    { "data": "Descripcion", className: "text-center" },
                    { "data": "Cantidad", className: "text-center" },
                    { "data": "PrecioUnitario", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
                    { "data": "Total", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
                    {
                        "data": "PREUNIT_NUEVA", className: "text-center", render: function (data, type, row) {
                            return '$' + "<input class='InputPU' id='InputPU' style='width: 70px; border: 0; border-bottom: 1px solid; background: transparent; ' type='number' min='1' max='' value='" + data + "'></input>";
                        }
                    },
                    { "data": "iva", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
                    { "data": "STiva", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
                    //{
                    //    "data": null, render: function (data, type, row) {
                    //        return '<button title="Eliminar Partida" id="BtnDeletePartida" class="btn btn-danger btn-sm fa fa-times" data-toggle="modal"></button>';
                    //    }
                    //}
                    {
                        "data": null, render: function (data, type, row) {
                            if (row.OC_PorValidar == "3" || row.OC_PorValidar == 3) {
                                return '<button title="Eliminar Partida" id="BtnDeletePartida" class="btn btn-danger btn-sm fa fa-times" data-toggle="modal"></button>';
                            } else {
                                return '';
                            }
                        }
                    },
                    {
                        "data": "CANTIDAD_NUEVA", className: "text-center", render: function (data, type, row) {
                            if (row.OC_PorValidar == "3" || row.OC_PorValidar == 3) {
                                return "<input title='Actualizar Cantidad' class='InputCant' id='InputCant' style='width: 70px; border: 0; border-bottom: 1px solid; background: transparent; ' type='number' min='1' max='' value='" + data + "'></input>";
                            } else {
                                return "";
                            }
                        }
                    },
                    {
                        "data": null, render: function (data, type, row) {
                            if (row.OC_PorValidar == "3" || row.OC_PorValidar == 3) {
                                return '<button title="Actualizar Nueva Cant." id="BtnActualizarCant" class="btn btn-info btn-sm fa fa-pencil" data-toggle="modal"></button>';
                            } else {
                                return '';
                            }
                        }
                    }
                ],
                columnDefs: [
                    {
                        searchable: false,
                        orderable: false,
                        targets: 0,
                    },
                ],
            });
            t.on('order.dt search.dt', function () {
                let i = 1;

                t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                    this.data(i++);
                });
            }).draw();
        }

        $('#DetalleOCModal').on('hidden.bs.modal', function () {
            location.reload();
        })

        //P.U
        $('#DetalleOCModal').on('shown.bs.modal', function () {
            $(".InputPU").keyup(function () {
                var tr = $(this).closest('tr');
                var row = $('#tblDetalleOC').DataTable().row(tr);
                row.data().PREUNIT_NUEVA = $(this).val();
            });

            //Nueva Cantidad (ya que el proveedor no trajo todas las pzas)
            $(".InputCant").keyup(function () {
