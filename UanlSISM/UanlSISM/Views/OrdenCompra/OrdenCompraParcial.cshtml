<script>

    var DetOC_Parcial = [];

    $(document).ready(function () {

        $('#tbl_OCparciales').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "search": "Buscar:",
                "info": "_TOTAL_  O.C",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            }
        });

        LlenaOC();
    });

    function LlenaOC() {
        $.ajax({
            url: '@Url.Action("ObtenerOCInicio_Parciales", "OrdenCompra")',
            method: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops... ¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else {
                    LlenaTablaOC_Parciales(data.OCS);
                }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTablaOC_Parciales(ListaOCS_P) {
        var table = $('#tbl_OCparciales').DataTable();
        table.destroy();

        table = $('#tbl_OCparciales').DataTable({
            responsive: true,
            searching: true,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            scrollY: 280,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "search": "Buscar:",
                "info": "_TOTAL_  ",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: ListaOCS_P,
            order: [[1, 'desc']],
            columns: [
                { 'data': 'Clave', className: "text-center" },
                { 'data': 'Fecha', className: "text-center" },
                { 'data': 'Id_User', className: "text-center" },
                {
                    "className": 'text-center',
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<button title="Ver Detalle" id="VerDetalle" class="btn btn-primary fa fa-book" data-toggle="modal"></button>',
                    "target": -2
                }
            ]
        });
    }

    var Folio = "";
    var Proveedor = "";
    var EsConContrato = "";
    var FolioRequi = "";

    $('#tbl_OCparciales tbody').on('click', '#VerDetalle', function () {
        var tr = $(this).closest('tr');
        var row = $('#tbl_OCparciales').DataTable().row(tr);
        var Id = row.data().Clave;

        $('#DetalleParcialModal').modal("show");

        var array = { Id_OC: Id };
        var url = '@Url.Action("ObtenerDetalleParcial", "OrdenCompra")';
        $.post(url, array).done(function (response) {
            $('#NoOC').html(response[0].Folio);
            $('#FechaOC').html(response[0].Fecha);
            $('#Requi').html(response[0].FolioRequisicion);
            $('#EstContrato').html(response[0].EstatusContrato);

            if (response[0].EstatusContrato == "Sin Contrato") {
                $('#EstContrato').hide();
                $('#Contrato').hide();
            } else {
                $('#EstContrato').show();
                $('#IDD').hide();

                document.getElementById('PROV').textContent = 'MEDICAZEN S.A. DE C.V.';
                $('#Contrato').show();
            }
            Folio = $('#NoOC').val(response[0].Folio);
            EsConContrato = $("#EstContrato").val(response[0].EstatusContrato);
            FolioRequi = $('#Requi').val(response[0].FolioRequisicion);

            $.grep(response, function (item) {
                var Insertar = true;
                $.grep(DetOC_Parcial, function (itemEnLista) {
                    if (item.Clave == itemEnLista.Clave) {
                    };
                });
                if (Insertar) {
                    item.CANTIDAD_NUEVA = 0;
                    item.PREUNIT_NUEVA = 0;
                    item.TOTAL_NUEVA = 0;
                    DetOC_Parcial.push(item);
                }
                LlenDetalle(DetOC_Parcial);
            });

        }).fail(function (response) {
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
            });
        });

        $("#IDD").change(function () {
            var combo = document.getElementById("IDD");
            var selected = combo.options[combo.selectedIndex].text;
            document.getElementById('PROV').textContent = selected;
        });

        function LlenDetalle(DetOC_P) {
            var tableP = $('#tblDetalleOC_P').DataTable();

            tableP.destroy();
            tableP = $('#tblDetalleOC_P').DataTable({
                destroy: true,
                searching: false,
                responsive: true,
                lengthChange: false,
                paging: false,
                data: DetOC_P,
                language: {
                    "zeroRecords": " ",
                    "search": "",
                    "info": "",
                    "infoEmpty": "",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior",
                    },
                    "select": {
                        "rows": " %d filas seleccionadas"
                    },
                },
                columns: [
                    {
                        'data': 'ORDEN', className: "text-center",
                        render: function (data, type, row, meta) {
                            return (row.ORDEN = meta.row + meta.settings._iDisplayStart + 1);
                        }
                    },
                    { "data": "Clave", className: "text-center" },
                    { "data": "Descripcion", className: "text-center" },
                    { "data": "Cantidad", className: "text-center" },
                    { "data": "PrecioUnitario", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
                    { "data": "Total", className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
                    { 'data': 'CANTIDAD_NUEVA', className: "text-center", render: function (data) { return "<input class='input' id='InputCantidad' type='number' style='width:70px; border:0; border-bottom:1px solid; background:transparent;' type='number' min='0' max='' value='" + data + "'></input>" } },
                    { 'data': 'PREUNIT_NUEVA', className: "text-center", render: function (data) { return (row.data().EstatusContrato != 'Sin Contrato' ? "<a>N.A</a>" : "<input class='InputPU' id='InputPU' style='width: 70px; border: 0; border-bottom: 1px solid; background: transparent; ' type='number' min='1' max='' value='" + data + "'></input>"); } },
                    {
                        "data": 'TOTAL_NUEVA',
                        render: function (data, type, row, meta) {
                            return '<input style="width:70px; border:0; border-bottom:1px solid; background:transparent;" id="ORDEN' + row.ORDEN + '" type="text" value="' + data + '" readonly/>';
                        },
                        "searchable": false,
                        className: "text-center"
                    },
                    { 'data': 'CB_ELIMINAR', className: "text-center", render: function (data) { return "<input class='input3' id='input3' type='checkbox' ></input>" } }
                ]
            });

            var sum = $('#tblDetalleOC_P').DataTable().column(5).data().sum();
            $('#Total_OC').html(sum.toFixed(2));
        }

    });

    $('#DetalleParcialModal').on('shown.bs.modal', function () {

        var EC = "";
        var TotalNuevo = 0;

        $('.input3').change(function () {
            var tr = $(this).closest('tr');
            var row = $('#tblDetalleOC_P').DataTable().row(tr);

            row.data().CB_ELIMINAR = true;
        });

        $(".input").keyup(function () {
            var tr = $(this).closest('tr');
            var row = $('#tblDetalleOC_P').DataTable().row(tr);
            var valor = $(this).val();
            EC = row.data().EstatusContrato;

            //Validar si la CANTIDAD_NUEVA es mayor a la Cantidad Solicitada
            if (valor > row.data().Cantidad) {
                Swal.fire({
                    position: 'top-end',
                    icon: 'error',
                    title: 'La Cantidad Nueva no puede ser mayor a la Cantidad Solicitada',
                    showConfirmButton: false,
                    timer: 1600
                })
                row.data().CANTIDAD_NUEVA = $(this).val("0");
            } else {
                row.data().CANTIDAD_NUEVA = valor;

                if (EC != "Sin Contrato") {
                    TotalNuevo = row.data().CANTIDAD_NUEVA * row.data().PrecioUnitario;
                    row.data().TOTAL_NUEVA = TotalNuevo.toFixed(2);
                    $('#ORDEN' + row.data().ORDEN).val(TotalNuevo.toFixed(2));
                    var sum = $('#tblDetalleOC_P').DataTable().column(8).data().sum();
                    $('#Total_OC2').html(sum.toFixed(2));
                }
            }

        });

        $(".InputPU").keyup(function () {
            var tr = $(this).closest('tr');
            var row = $('#tblDetalleOC_P').DataTable().row(tr);
            row.data().PREUNIT_NUEVA = $(this).val();

            if (row.data().CANTIDAD_NUEVA > "0") {
                TotalNuevo = row.data().CANTIDAD_NUEVA * row.data().PREUNIT_NUEVA;
                row.data().TOTAL_NUEVA = TotalNuevo.toFixed(2);
                $('#ORDEN' + row.data().ORDEN).val(TotalNuevo.toFixed(2));

                var sum = $('#tblDetalleOC_P').DataTable().column(8).data().sum();
                $('#Total_OC2').html(sum.toFixed(2));
            }
            else {
                TotalNuevo = row.data().Cantidad * row.data().PREUNIT_NUEVA;
                row.data().TOTAL_NUEVA = TotalNuevo.toFixed(2);
                $('#ORDEN' + row.data().ORDEN).val(TotalNuevo.toFixed(2));

                var sum = $('#tblDetalleOC_P').DataTable().column(8).data().sum();
                $('#Total_OC2').html(sum.toFixed(2));
            }
        });

    })

    $('#btnGenerarOC').on('click', function () {
        Folio = $("#NoOC").val();
        //Proveedor = document.getElementById('PROV').textContent.trim();
        Contrato = $("#Contrato").val();
        FolioRequi = $('#Requi').val();

        if (DetOC_Parcial.length > 0) {
            $.ajax({
                url: '@Url.Action("GenerarOC_Parcial", "OrdenCompra")',
                method: 'POST',
                dataType: 'json',
                data: { ListaOC: DetOC_Parcial, FolioOC: Folio/*, ProveedorReq: Proveedor*/, FolioRequi: FolioRequi },
                success: function (data) {
                    if (data.MENSAJE.substring(0, 6) == "Error:") {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops... ¡Error!',
                            text: data.MENSAJE.substring(7)
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: data.MENSAJE.substring(7),
                            willClose: () => {
                                location.reload();
                            }
                        })
                    }            
                },
                error: function (ex) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Orden de Compra no generada',
                    });           
                }
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
                text: 'No hay datos para la Orden de Compra'
            });
        }
    });

    $('#DetalleParcialModal').on('hidden.bs.modal', function () {
        location.reload();
    })

    $('#Cancelar').on('click', function () {
        location.reload();
    });

    function Regresar() {
        window.location = '@Url.Action("OrdenCompra")';
    }
</script>

