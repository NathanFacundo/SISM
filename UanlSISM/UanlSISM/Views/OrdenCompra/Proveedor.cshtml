                    @Html.DropDownList("Prov_Nombre", (IEnumerable<SelectListItem>)ViewBag.PROVEEDORES, "Catálogo Proveedores", htmlAttributes: new { @class = "dropdown-content", id = "IDD" })
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col">

                    </div>
