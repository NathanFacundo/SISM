<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript" src="~/Scripts/2023/bootstrap-datepicker.min.js"></script>

<script src="https://cdn.datatables.net/plug-ins/1.10.19/api/sum().js"></script>
<script type="text/javascript" src="~/Scripts/2023/sum().js"></script>

<script>

    $(document).ready(function () {

        $('#TblProveedor').DataTable({
            paging: false,
            scroller: false,
            responsive: true,
            searching: false,
            info: true,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "search": "",
                "info": "",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            }
        });

    });

    $('#datepickerInicio').datepicker({
        locale: 'es-es',
        showOtherMonths: true,
        format: 'dd/mm/yyyy'
    });

    $('#datepickerFin').datepicker({
        locale: 'es-es',
        showOtherMonths: true,
        format: 'dd/mm/yyyy'
    });

    function ConsultarReporte() {
        var FechaInicio = $('#datepickerInicio input').val();
        var FechaFin = $('#datepickerFin input').val()

        var combo = document.getElementById("IDD");
        var Proveedor = combo.options[combo.selectedIndex].text;

        if (FechaInicio != "" && FechaFin != "" && Proveedor != "") {
            ConsultarProveedor(FechaInicio, FechaFin, Proveedor)
        } else {
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
                text: 'Debe ingresar la Fecha Inicio, Fecha Fin y el Proveedor'
            });
        }
    }

    function ConsultarProveedor(FechaInicio, FechaFin, Proveedor) {
        $.ajax({
            url: '@Url.Action("ObtenerReporteProveedor", "OrdenCompra")',
            method: 'POST',
            dataType: 'json',
            data: { FechaInicio: FechaInicio, FechaFin: FechaFin, Proveedor: Proveedor},
            success: function (data) {
                if (data == 0 || data == "0") {
                    Swal.fire({
                        icon: 'error',
                        title: 'No se encontraron registros con los filtros ingresados'
                    });
                }
                if (data.MENSAJE) {
                    Swal.fire({
                        icon: 'error',
                        title: '¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                LlenaTabla(data);

                //document.getElementById("SumatoriaGranTotal").innerHTML = "Sumatoria Gran Total $" + data.TotalGranT;
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTabla(Rep) {
        var table = $('#TblProveedor').DataTable();
        table.destroy();

        table = $('#TblProveedor').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            paging: false,
            lengthChange: false,
            language: {
                "zeroRecords": "No se encontraron registros",
                "search": "",
                "info": "_TOTAL_ filas",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: Rep,
            "order": [[1, 'asc']],
            columns: [
                { 'data': 'NombreProveedor', className: "text-center" },
                { 'data': 'Folio', className: "text-center" },
                { 'data': 'FechaOC', className: "text-center" },
                { 'data': 'GranT', className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$ ', ' ') },
                { 'data': 'FechaAcuse', className: "text-center" },
                { 'data': 'NumContrato', className: "text-center" }
            ]
        });

        var sum = $('#TblProveedor').DataTable().column(3).data().sum();
        const formato = new Intl.NumberFormat('es-MX', { maximumFractionDigits: 2 });
        document.getElementById("SumatoriaGranTotal").innerHTML = "Sumatoria Gran Total $" + formato.format(sum);

    }

    function Regresar() {
        window.location.href = '../OrdenCompra/OrdenCompraPorValidar'
    }

    function Limpiar() {
        location.reload();
    }

</script>