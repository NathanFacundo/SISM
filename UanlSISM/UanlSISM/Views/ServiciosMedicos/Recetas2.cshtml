                Swal.fire({
                    title: "Pregunta a Paciente si es alérgico a algún medicamento",
                    icon: "question",
                    dangerMode: true,
                    showCancelButton: false,
                    showDenyButton: true,
                    confirmButtonText: 'Si',
                    denyButtonText: 'No',
                    closeOnClickOutside: false,
                    allowOutsideClick: false,
                })
                .then((result) => {
                    if (result.isConfirmed) {
                        $('#alergModal').modal('show');
                    } else if (result.isDenied) {
                        //alert('sfasfsa');
                        $.ajax({
                            url: '@Url.Action("SinAlergia", "ServiciosMedicos")' ,
                            dataType: "json" ,
                            data: { expediente: $("#numemp").val() },
                        });
                    }
                });
            }

        },
        error: function (xhr, status, error) {
            //Swal.fire('Error', '', 'error');
        }
    });


    //var alergias = 0;
    $(document).on('click', '.alergias', function () {
        $('#alergModal').modal('show');
        $("#alerg").empty();
        $.ajax({
            type: 'GET',
            url: '@Url.Action("TodasAlergias", "ServiciosMedicos")',
            dataType: 'json',
            data: { expediente: $("#numemp").val() },
            cache: false,
            success: function (data) {
                var count = 1;
                $.each(data, function (i, item) {
                    $('#alerg').append('<span class="alergiamed"><b>'+ count + '.- ' + item.medicamento + '</b><span>');
                    count++
                });
            },
            error: function (xhr, status, error) {
                //Swal.fire('Error', '', 'error');
            }
        });
    });
</script>


