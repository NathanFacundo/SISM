            //            }
            //        }
            //    },
            //    { 'data': 'FechaOC', className: "text-center" },
            //    { 'data': 'CanOC', className: "text-center" },
            //    { 'data': 'PrecioUnitario', className: "text-center", render: $.fn.dataTable.render.number(',', '.', 2, '$  ', ' ') },
            //    {
            //        "data": "FolioVE", className: "text-center", render: function (data) {
            //            if (data == '' || data == null) {
            //                return '<h8 style="color:red; "><b>' + "SIN O.C." + '</b></h8>';
            //            } else {
            //                return '<h8 style="color:black; ">' + data + '</h8>';
            //            }
            //        }
