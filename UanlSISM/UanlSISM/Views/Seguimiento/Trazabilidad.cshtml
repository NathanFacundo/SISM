<script>

    $(document).ready(function () {

        Swal.fire({
            title: 'Ingrese rango de fechas y clave del medicamento para la búsqueda',
            showConfirmButton: false,
            timer: 1750
        })

        $('#TblTrazabilidad').DataTable({
            paging: false,
            scroller: false,
            responsive: true,
            searching: false,
            info: true,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "search": "",
                "info": "",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            }
        });

    });

    $('#datepickerInicio').datepicker({
        locale: 'es-es',
        showOtherMonths: true,
        format: 'dd/mm/yyyy'
    });

    $('#datepickerFin').datepicker({
        locale: 'es-es',
        showOtherMonths: true,
        format: 'dd/mm/yyyy'
    });

    function Buscar() {
        var FechaInicio = $('#datepickerInicio input').val();
        var FechaFin = $('#datepickerFin input').val()
        var ClaveMed = $("#ClaveM").val();

        if (FechaInicio != "" && FechaFin != "" && ClaveMed != "") {

            Swal.fire({
                title: 'Realizando búsqueda',
                timer: 1000,
                timerProgressBar: true,
                showConfirmButton: false,
            })

            LlenaTbl(FechaInicio, FechaFin, ClaveMed)
        } else {
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
                text: 'Debe ingresar las Fechas y Clave de Medicamento'
            });
        }
    }

    function LlenaTbl(FechaInicio, FechaFin, ClaveMed) {
        $.ajax({
            url: '@Url.Action("ObtenerReporte1", "Seguimiento")',
            method: 'POST',
            dataType: 'json',
            data: { FechaInicio: FechaInicio, FechaFin: FechaFin, ClaveMed: ClaveMed },
            success: function (data) {

                //var count = data.REP.length;

                if (data.MENSAJE.substring(0, 6) == "Error:") {
                    Swal.fire({
                        icon: 'error',
                        title: '¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }
                else
                    if (data.REP == 0 || data.REP == "0") {
                        Swal.fire({
                            icon: 'error',
                            title: 'No se encontraron registros con los filtros ingresados'
                        });
                    }
                    else {
                        LlenaTabla(data.REP);
                    }
            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTabla(Rep) {
        var table = $('#TblTrazabilidad').DataTable();
        table.destroy();

        table = $('#TblTrazabilidad').DataTable({
            responsive: true,
            searching: false,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            paging: false,
            lengthChange: false,
            language: {
                "zeroRecords": "No se encontraron registros",
                "search": "",
                "info": "_TOTAL_ filas",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: Rep,
            "order": [[2, 'desc']],

            //columns: [
            //    {
