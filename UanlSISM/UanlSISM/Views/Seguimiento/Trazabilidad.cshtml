            //    { 'data': 'CantSurVE', className: "text-center" },
            //    { 'data': 'FacturaVE', className: "text-center" }
            //]

            columns: [
                {
                    'data': 'Clave_Med_', className: "text-center", render: function (data) {
                        return '<h8 style="color:white; ">' + data + '</h8>';
                    }
                },
                { 'data': 'Folio_Req_', className: "text-center" },
                { 'data': 'Fecha_Req_', className: "text-center", render: function (data) { return moment(data).isValid() ? moment(data).format("DD/MM/YYYY HH:mm") : ""; } },
                { 'data': 'Cant__Req_', className: "text-center" },
                {
                    "data": "Folio_OC_", className: "text-center", render: function (data) {
                        if (data == '' || data == null) {
