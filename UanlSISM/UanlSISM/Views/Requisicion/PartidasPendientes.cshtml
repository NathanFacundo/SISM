<script>

    $(document).ready(function () {

        $('#TblReporte').DataTable({
            paging: false,
            scroller: false,
            responsive: true,
            searching: false,
            info: true,
            lengthChange: false,
            language: {
                "zeroRecords": " ",
                "search": "",
                "info": "",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            }
        });

        $("#Pendiente").css("display", "none");

        LlenaTbl();

    });


    function LlenaTbl() {
        $.ajax({
            url: '@Url.Action("ObtenerPartidasPendientes", "Requisicion")',
            method: 'POST',
            dataType: 'json',
            success: function (data) {

                if (data == 0 || data == "0") {
                    Swal.fire({
                        icon: 'error',
                        title: 'No se encontraron registros'
                    });
                }
                if (data.MENSAJE) {
                    Swal.fire({
                        icon: 'error',
                        title: '¡Error!',
                        text: data.MENSAJE.substring(7),
                    });
                }

                if (data.length >= 0) {

                    $("#Pendiente").css("display", "");

                    var TotalPartidasPendientes = data.length;
                    document.getElementById("Pendiente").innerHTML = "Partidas pendientes totales: " + TotalPartidasPendientes;

                } else {
                    $("#Pendiente").css("display", "none");
                }

                LlenaTabla(data);

            },
            error: function (ex) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                });
            }
        });
    }

    function LlenaTabla(Rep) {
        var table = $('#TblReporte').DataTable();
        table.destroy();

        table = $('#TblReporte').DataTable({
            responsive: true,
            searching: true,
            info: true,
            deferRender: true,
            scroller: true,
            scrollColapse: true,
            paging: false,
            lengthChange: false,
            language: {
                "zeroRecords": "No se encontraron registros",
                "search": "Buscar: ",
                "info": "_TOTAL_ filas",
                "infoEmpty": "",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior",
                },
                "select": {
                    "rows": " %d filas seleccionadas"
                },
            },
            data: Rep,
            "order": [[0, 'desc']],
            columns: [
                { 'data': 'Folio_Req', className: "text-center" },
                { 'data': 'Fecha_Req', className: "text-center" },
                { 'data': 'Contrato', className: "text-center" },
                //{ 'data': 'Estatus_Req', className: "text-center" },
                {
                    "data": "Estatus_Req", className: "text-center", render: function (data) {
                        if (data == "Parcial") {
                            return '<h8 style="color:black; background-color:yellow; font-family:Arial; font-size:14px">' + "PARCIAL" + '</h8>';
                        }
                        if (data == "Pendiente") {
                            return '<h8 style="color:white; background-color:red; font-family:Arial; font-size:14px">' + "PENDIENTE" + '</h8>';
                        }
                    }
                },
                { 'data': 'Clave_Med', className: "text-center" },
                { 'data': 'Cant_Sol', className: "text-center" },
                //{ 'data': 'Cant_OC', className: "text-center" },
                { 'data': 'Cant_Pte', className: "text-center" },
                { 'data': 'Descripcion', className: "text-left" }
            ],
            dom: 'Bfrtip',
            buttons: [
                { extend: 'excel', text: 'Excel' },
                { extend: 'pdf', text: 'PDF' },
                { extend: 'print', text: 'Imprimir' },
            ]
        });
    }

    function Regresar() {
        window.location.href = '../OrdenCompra/OrdenCompra'
    }

</script>
