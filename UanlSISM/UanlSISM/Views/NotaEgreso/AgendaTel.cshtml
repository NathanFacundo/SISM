
@{
    ViewBag.Title = "AgendaTel";
    Layout = "";
}

<style>

    th {
        color: white;
        font-size: x-large;
    }

    td {
        font-size: x-large;
    }


    nav {
        background-color: rgba(0,74,143,1) !important;
    }
</style>

<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <div class="row" style="width:100%;">
            <div class="col-6 p-0">
                <a class="navbar-brand"><img src="~/Imagenes/logo-sm.png" style="width:18%" /></a>
                <a class="navbar-brand"><img style="width:10%;" src="~/Imagenes/logo_SISM2.png" /> </a>
            </div>
            <div class="col-6 text-right m-auto">
            </div>
        </div>
    </div>
</nav>

<div class="col-md-8 offset-md-2">

    <div class="row text-center mt-3">
        <h2><b>Directorio Telefónico</b></h2>
    </div>

    <div class="row mt-3">
        <table id="table" class="table table-bordered table-striped table-responsive-lg">
            <thead>
                <tr style="background-color: #FBC43D !important">
                    <th>Nombre</th>
                    <th>Puesto</th>
                    <th>Ext</th>
                    <th>Area</th>
                </tr>
            </thead>
            <tbody>

                @for (var i = 0;i <= 10; i++)
                {
                <tr>
                    <td><i class="bi bi-person-fill"></i>  Victor Castañeda</td>
                    <td>  Developer</td>
                    <td><i class="bi bi-telephone-fill"></i>  252</td>
                    <td><i class="bi bi-building"></i>  Sistemas</td>
                </tr>
                }

            </tbody>

        </table>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />

<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js" ></script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

<script>
    $(document).ready(function () {
        $('#table').DataTable({
            searching: false,
            "language": {
                "search": "Buscar Solicitud ",
                "zeroRecords": "No se encontró ninguna solicitud de laboratorio",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior"
                },
                "select": {
                    "rows": " filas seleccionadas"
                },
                "loadingRecords": "Un momento, cargando solicitudes de laboratorio...",
                "processing": "Procesando ...",
                "info": "Mostrando _START_ a _END_ de _TOTAL_ ",
            }
        });
    });
</script>